Plug 'machakann/vim-highlightedyank'
Plug 'tpope/vim-surround'

set highlightedyank # Highlight what you try to copy
let g:highlightedyank_highlight_duration = 10
let g:highlightedyank_highlight_in_visual = 0

noremap <Leader> <Space>
inoremap jj <Esc>

nnoremap <Space>; A;<Esc>
nnoremap <Space>, A,<Esc>
nnoremap <Space>j 10jzz
nnoremap <Space>k 10kzz

vnoremap p "_dP
vnoremap ( c()<Esc>P
vnoremap " c""<Esc>P
vnoremap ' c''<Esc>P
vnoremap [ c[]<Esc>P
vnoremap { c{}<Esc>P
vnoremap <Space>j 10jzz
vnoremap <Space>k 10kzz

